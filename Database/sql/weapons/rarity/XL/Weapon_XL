DROP TABLE IF EXISTS Weapon_XL;

CREATE TABLE IF NOT EXISTS Weapon_XL ( 
    name VARCHAR ( 24 ) NOT NULL PRIMARY KEY,
    base_attk INTEGER NOT NULL,
    affinity VARCHAR NOT NULL,
    star INTEGER,
    type VARCHAR,
    FOREIGN KEY (affinity) REFERENCES Affinity (type),
    FOREIGN KEY (type) REFERENCES WeaponType (name)  
);

